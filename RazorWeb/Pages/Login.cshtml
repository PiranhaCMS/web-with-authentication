@page
@model LoginPageModel
@{
    ViewData["Title"] = "Login";
}

<header class="has-image" style="background-image:url(@Url.Content("~/assets/img/door-green-closed-lock-4291.jpg"))">
    <div class="dimmer"></div>
    <div class="container text-center">
        <h1>Login</h1>
        <div class="row justify-content-center">
            <div class="col-lg-8 lead">
                <p>Nullam quis risus eget urna mollis ornare vel eu leo. Aenean eu leo quam. Pellentesque ornare sem lacinia quam venenatis vestibulum.</p>
            </div>
        </div>
    </div>
</header>

<main>
    <div class="block">
        <div class="container">
            <p class="lead">The content you requested is unfortunatly for authenticated eyes only. Please log in to proceed.</p>
            <p>You can log in with the web user <code>user</code> / <code>password</code> who only has the role <code>Subscriber</code>.</p>
            <div class="row">
                <div class="col-sm-4">
                    <form method="post">
                        <input type="hidden" name="ReturnUrl" value="@Request.Query["ReturnUrl"]">
                        <div class="form-group">
                            <label>Username</label>
                            <input type="text" name="Username" class="form-control">
                        </div>
                        <div class="form-group">
                            <label>Password</label>
                            <input type="password" name="Password" class="form-control">
                        </div>
                        <button class="btn btn-success">Login</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>>